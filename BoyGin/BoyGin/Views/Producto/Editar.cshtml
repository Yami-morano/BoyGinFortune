@model BoyGin.Models.DTOProducto
@{
    ViewBag.Title = "Editar";
}

<h2>Editar el producto @Model.nombreProducto </h2>


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.idProducto)

            <div class="form-group">
                <label>Nombre del producto</label>
                @Html.TextBoxFor(x => x.nombreProducto, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                @Html.TextBoxFor(x => x.descripcion, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>tipo de producto</label>
                @Html.DropDownListFor(x => x.idTipoProducto, new SelectList(ViewBag.ListaTipoProducto, "idTipoProducto", "nombreTipo"), "Seleccione el tipo", htmlAttributes: new { @class = "form-control", @id = "cmbTipo" })
            </div>
            <div class="form-group">
                <label>Precio</label>
                @Html.TextBoxFor(x => x.precioProducto, htmlAttributes: new { @class = "form-control" })
            </div>
            @Html.HiddenFor(x => x.estado)
            <input type="submit" value="Modificar" class="btn btn-success" />
        }
    </div>
    <div class="col-md-2"></div>
</div>


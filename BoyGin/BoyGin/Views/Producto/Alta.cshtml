@model BoyGin.Models.VMProducto
@{
    ViewBag.Title = "Alta";
}


<h2>Alta de Productos</h2>


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">


        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new {@class= "text-danger" })
            <div class="form-group">
                <label>Nombre Producto</label>
                @Html.TextBoxFor(x => x.productoModel.nombreProducto, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                @Html.ValidationMessageFor(model => model.productoModel.nombreProducto, "", new {@class = "text-danger"})
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                @Html.TextBoxFor(x => x.productoModel.descripcion, htmlAttributes: new { @class = "form-control", @id = "txtDescripcion" })
                @Html.ValidationMessageFor(model => model.productoModel.descripcion, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <label>Tipo de producto</label>
                @Html.DropDownListFor(x => x.productoModel.idTipoProducto, new SelectList(Model.tipos, "idTipoProducto", "nombreTipo"), "Seleccione el tipo", htmlAttributes: new { @class = "form-control", @id = "cmbTipo" })
                @Html.ValidationMessageFor(model => model.productoModel.idTipoProducto, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Precio </label> 
                @Html.TextBoxFor(x => x.productoModel.precioProducto, htmlAttributes: new { @class = "form-control", @id = "txtPrecio" })
                @Html.ValidationMessageFor(model => model.productoModel.precioProducto, "", new { @class = "text-danger" })
            </div>



            <input type="submit" value="Aceptar" class="btn btn-primary" />


        }
    </div>
    <div class="col-md-2"></div>
</div>



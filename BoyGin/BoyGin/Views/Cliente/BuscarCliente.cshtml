@model List<BoyGin.Models.DTOCliente>
@{
    ViewBag.Title = "BuscarCliente";
}

<h2>Buscar Cliente</h2>



@using (Html.BeginForm("BuscarCliente", "Cliente", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            Busqueda de clientes
        </div>
        <div class="panel-body">

            <div class=" form-group">
                @Html.Label("Nombre")
                @Html.TextBox("nombre", "", new { @class = "form-control" })

            </div>
            <div class=" form-group">
                @Html.Label("Apellido")
                @Html.TextBox("apellido", "", new { @class = "form-control" })

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Buscar</button>
            </div>
        </div>
    </div>
}
@if (Model != null)
{
    <table class=" table table-striped ">
        <tr>
            <th>Nombre completo</th>
            <th>DNI</th>
            <th>Domicilio</th>
            <th>Número</th>
            <th>Localidad</th>
            <th>Provincia</th>
            <th>Telefono</th>
            <th>Email</th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>@item.nombreCliente</td>
        <td>@item.DNI</td>
        <td>@item.domicilio</td>
        <td>@item.numeroDomicilio</td>
        <td>@item.localidad</td>
        <td>@item.nombreProvincia</td>
        <td>@item.telefono</td>
        <td>@item.email</td>

    </tr>
        }
    </table>

}


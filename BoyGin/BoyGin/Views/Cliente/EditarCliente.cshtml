@model BoyGin.Models.DTOCliente
@{
    ViewBag.Title = "EditarCliente";
}

    <h2>Editar Cliente @Model.nombreCliente </h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.idCliente)

            <div class="form-group">
                <label>Nombre</label>
                @Html.TextBoxFor(x => x.nombreCliente, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Apellido</label>
                @Html.TextBoxFor(x => x.apellidoCliente, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>DNI</label>
                @Html.TextBoxFor(x => x.DNI, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Domicilio</label>
                @Html.TextBoxFor(x => x.domicilio, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Número</label>
                @Html.TextBoxFor(x => x.numeroDomicilio, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Localidad</label>
                @Html.TextBoxFor(x => x.localidad, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Provincia</label>
                @Html.DropDownListFor(x => x.idProvincia, new SelectList(ViewBag.listadoProvincias, "idProvincia", "nombreProvincia"), "Seleccione el tipo", htmlAttributes: new { @class = "form-control", @id = "cmbTipo" })
                @*@Html.TextBoxFor(x => x.idProvincia, htmlAttributes: new { @class = "form-control" })*@
            </div>
            <div class="form-group">
                <label>Telefono</label>
                @Html.TextBoxFor(x => x.telefono, htmlAttributes: new { @class = "form-control" })
            </div>

            @Html.HiddenFor(x => x.idUsuario)
            @Html.HiddenFor(x => x.estado)

            <input type="submit" value="Modificar" class="btn btn-success" />
        }
    </div>
    <div class="col-md-2"></div>
</div>

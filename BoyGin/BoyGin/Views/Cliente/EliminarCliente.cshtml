@model BoyGin.Models.DTOCliente
@{
    ViewBag.Title = "EliminarCliente";
}



<h2>Eliminar el cliente @Model.nombreCliente </h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.idCliente)
            <div class="form-group">
                <label>Nombre</label>
                @Html.TextBoxFor(x => x.nombreCliente, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Apellido</label>
                @Html.TextBoxFor(x => x.apellidoCliente, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Dni</label>
                @Html.TextBoxFor(x => x.DNI, htmlAttributes: new { @class = "form-control" })
            </div>

            <input type="submit" value="Eliminar" class="btn btn-danger" />
        }
    </div>
    <div class="col-md-2"></div>
</div>

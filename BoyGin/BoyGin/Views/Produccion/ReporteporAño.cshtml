@model BoyGin.Models.HistorialProduccion
@{
    ViewBag.Title = "ReporteporAño";
}

<h2>ReporteporAño</h2>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
@using (Html.BeginForm("ReporteporAño", "Produccion", FormMethod.Post))
{

    <div class="form-group">
        <label>Año</label>
        @Html.DropDownListFor(x => x.idProduccion, new SelectList(Model.idProduccion, "idTipoProducto", "nombreTipo"), "Seleccione el tipo", htmlAttributes: new { @class = "form-control", @id = "cmbTipo" })

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default">Buscar</button>
    </div>
}

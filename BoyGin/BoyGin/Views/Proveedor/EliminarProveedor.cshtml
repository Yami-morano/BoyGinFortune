@model BoyGin.Models.DTOProveedor
@{
    ViewBag.Title = "EliminarProveedor";
}

<h2>Eliminar @Model.nombre_razonSocial </h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.idProveedor)
            <div class="form-group">
                <label>Nombre / Razón social</label>
                @Html.TextBoxFor(x => x.nombre_razonSocial, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Apellido / Tipo sociedad</label>
                @Html.TextBoxFor(x => x.apellido_TipoSoc, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Localidad</label>
                @Html.TextBoxFor(x => x.localidad, htmlAttributes: new { @class = "form-control" })
            </div>


            <input type="submit" value="Eliminar" class="btn btn-danger" />
        }
    </div>
    <div class="col-md-2"></div>
</div>





@model BoyGin.Models.MateriaPrima
@{
    ViewBag.Title = "EliminarMateriaPrima";
}

    <h2>Eliminar @Model.descripcionMateriaPrima </h2>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(x => x.idMateriaPrima)
            <div class="form-group">
                <label>Descripcion de la materia prima</label>
                @Html.TextBoxFor(x => x.descripcionMateriaPrima, htmlAttributes: new { @class = "form-control" })
            </div>
           

            <input type="submit" value="Eliminar" class="btn btn-danger" />
        }
    </div>
    <div class="col-md-2"></div>
</div>



@model BoyGin.Models.MateriaPrima
@{
    ViewBag.Title = "Editar";
}

    <h2>Editar</h2>


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => x.idMateriaPrima)

        <div class="form-group">
            <label>Nombre de la materia prima</label>
            @Html.TextBoxFor(x => x.descripcionMateriaPrima, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.descripcionMateriaPrima, "", new { @class = "text-danger" })
        </div>

            @Html.HiddenFor(x => x.estado)

            <input type="submit" value="Modificar" class="btn btn-success" />
        }
    </div>
    <div class="col-md-2"></div>
</div>


            }

        .mi_dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .mi_dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .mi_dropdown-content a:hover {
                    background-color: #ddd;
                }

        .mi_dropdown:hover .mi_dropdown-content {
            display: block;
        }

